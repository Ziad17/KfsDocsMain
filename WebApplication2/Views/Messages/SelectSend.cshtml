@model WebApplication2.Models.ViewModels.Messages.SelectSendMessageModel



@using (Html.BeginForm("SelectSend", "Messages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>إرسال رسالة</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">


        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.RecieverID, Model.Employees, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RecieverID, "", new { @class = "text-danger" })
            </div>
            @Html.Label("إرسال إلى", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>


        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Header, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>


        <div class="form-group">

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.File, new { type = "file", name = "File", @class = "form-control" })
            </div>
            @Html.Label("الملف", htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <input type="hidden" name="SenderID" value="@Model.Sender.ID" class="control-label" />



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="إرسال" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
}

