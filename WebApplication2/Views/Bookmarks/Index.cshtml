@model IEnumerable<WebApplication2.Models.Bookmark>

@{ ViewBag.Title = "المفضلة"; }
<br />
<h2 style="display: inline-block; padding-bottom: 10px; position: relative; top: 9px; left: -15px;font-weight:600"><i class="fas fa-bookmark"></i>  @ViewBag.Title</h2>
<br />
@if (Model.Count() > 0)
{
<table id="table" class="display table table-hover  table-responsive">
    <tr style="background-color: #120d0d1c ">
        <th>
            إسم الملف
        </th>
        <th>
            المالك
        </th>
        <th>
            مستوى الملف
        </th>
        <th>
            تاريخ الحفظ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.File.Name, "View", "Files", new { id = item.FileID }, null)
    </td>
    <td>
        @Html.ActionLink(item.File.EmployeeRole.Employee.Name, "PersonProfile", "Employees", new { id = item.File.EmployeeRole.ID }, null)
    </td>
    <td>
        @Html.ActionLink(item.File.FileLevel.Name, "FileLevels", "Files", new { id = item.File.LevelID }, null)

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateCreated)
    </td>
    <td >

        @Html.ActionLink("مسح", "Delete", new { id = item.ID },htmlAttributes:new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table> }
