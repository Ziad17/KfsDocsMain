@model WebApplication2.Models.ViewModels.RolesChooseDefaultModel
<img style="display:inline-block;padding-bottom:10px;" src="~/Content/name.png" width="80" height="80" />
<h2  style="display: inline-block; padding-bottom: 10px; position: relative; top: 9px; left: -15px;">@Model.Employee.Name</h2>


<br/>
@if (Model.DefaultRole != null)
{
    <h4>Your Default Role Is @Model.DefaultRole.Role.ArabicName at @Model.DefaultRole.Institution.ArabicName</h4>
  
}
else
{ <h4 class="text-danger">No Default Role Found Please Choose One.</h4>}



<hr />


   <h5>My Roles</h5>
   <div class="table-responsive">
       <table class="table table-hover">
           <tr style="color:white;background-color:black">
               <th>
                   @Html.DisplayNameFor(model => model.DefaultRole.Role.ArabicName)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.DefaultRole.Institution.ArabicName)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.DefaultRole.Active)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.DefaultRole.HiringDate)
               </th>

               <th></th>
           </tr>

           @foreach (var item in Model.EmployeeRoles)
           {
               <tr>
                   <td>
                       @Html.DisplayFor(modelItem => item.Role.ArabicName)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.Institution.ArabicName)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.Active)
                   </td>
                   <td>
                       @Html.DisplayFor(modelItem => item.HiringDate)
                   </td>

                   @if (item.Active)
                   {
                       <td>
                           @using (Html.BeginForm("ChooseDefault", "Roles"))
                           {@Html.AntiForgeryToken()
                           <input type="hidden" name="id" value="@item.ID" />

                           <input type="submit" class="btn btn-default" value="ChooseDefault" />
                       }
                       </td>
                   }
               </tr>
           }

       </table>
       </div>
