@model IEnumerable<WebApplication2.Models.Institution>

@{
    ViewBag.Title = "Index";
}

<h2>Institutions</h2>

<p class="btn btn-default ">
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<br />
<br />
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArabicName)
            </th>






            <th>
                Institution Type
            </th>
            <th>
                Parent Institution
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.ActionLink(item.ArabicName, "InstitutionProfile", new { id = item.ID })
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.InstitutionType.ArabicName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Institution2.ArabicName)
        </td>
        
    </tr>
        }

    </table>
    </div>
