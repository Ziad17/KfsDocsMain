@model WebApplication2.Models.Employee


@{ ViewBag.Title = "تعديل معلوماتي";}
<br />
<h2 style="display: inline-block; padding-bottom: 10px; position: relative; top: 9px; left: -15px;font-weight:600"><i class="fas fa-user-edit"></i>  @ViewBag.Title</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <div style="background-color: #ffff; padding: 5px 20px 5px 20px; border-radius: 20px;" class="form-horizontal">
                    <hr />


                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("الإسم", htmlAttributes: new { @class = "control-label col-md-2" })

                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("رقم الهاتف", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>


                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PHD, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PHD, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("المؤهل", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("الحالة", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>


                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownList("CityID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                        </div>
                        @Html.Label("المدينة", htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-7"></div>
                    <div algin="center" class="col-md-5">
                        <input style="width:100%" type="submit" value="حفظ التغييرات" class="btn btn-primary but1" />
                    </div>
                    
                </div>
                </div>}



