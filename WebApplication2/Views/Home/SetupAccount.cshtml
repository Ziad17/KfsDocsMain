@model WebApplication2.Models.ViewModels.FirstLoginModel


@* <h2>تسجيل الدخول لإول مرة</h2>*@
@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

                <main align="center" class="form-signin">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        @*<img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">*@
                        <div class="mb-4 animate__animated animate__zoomIn img-circle" style="margin-bottom: 20px;direction: rtl;" align="center">
                            <p style=" display: inline-block; font-size: x-large; font-weight: 600; letter-spacing: 4px;">KFSDOCS</p>
                            <img style="display: inline-block; margin-top: -5px; " alt="Brand" src="~/Content/book.png" width="35" height="37">
                        </div>
                        <h1 class="h3 mb-3 fw-normal">تسجيل الدخول لإول مرة</h1>

                        @*@Html.LabelFor(model => model.AcadmicNumber, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.EditorFor(model => model.AcadmicNumber, new { htmlAttributes = new { @type = "number", @id = "AcadmicNumber", @class = "form-control", @placeholder = "الرقم الأكاديمي", @required = "required", @autofocus = "autofocus" } })
                        @Html.ValidationMessageFor(model => model.AcadmicNumber, "", new { @class = "text-danger" })
                        @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @type = "email", @id = "inputEmail", @class = "form-control", @placeholder = "البريد الألكتروني", @required = "required", @autofocus = "autofocus" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @*@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @id = "inputPassword", @class = "form-control", @placeholder = "كلمة السر", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        @*@Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @type = "password", @id = "inputConPassword", @class = "form-control", @placeholder = "تأكيد كلمة السر", @required = "required" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        <br />
                        <input type="submit" value="إنشاء" style="width:100%" class=" btn btn-lg btn-primary" />
                        <br />
                        <br />
                        <a href="~/Home/Login">بالفعل لدي حساب  </a>

                    </form>
                </main>
                }








