@model WebApplication2.Models.ViewModels.ViewFileModel



<h2> @Model.File.Name</h2>
<h4>@Model.Owner.Institution.ArabicName</h4>


<h4>@Model.Owner.Employee.Name </h4>


<br />
<hr />
<div class="col-lg-3">


    <dl>

        <dt>
            @Html.DisplayNameFor(model => model.File.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.File.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.File.Level)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.File.Level)
        </dd>
    </dl>

    @if (Model.isAuthor)
    {
        <hr />
        <h4>Options</h4>
        <ul>
            <li>@Html.ActionLink("Edit", "Edit", "Files", new { id = Model.File.ID }, null)</li>
            <li>@Html.ActionLink("Delete", "Delete", "Files", new { id = Model.File.ID }, null)</li>
            <li>@Html.ActionLink("AddVersion", "AddVersion", "Files", new { id = Model.File.ID }, null)</li>

        </ul>

    }
    else if (Model.canEdit || Model.canDelete || Model.canAddVersion)
    {
        <hr />
        <h4>Options</h4>
        <ul>

            @if (Model.canEdit)
            {
                <li>@Html.ActionLink("Edit", "Edit", "Files", new { id = Model.File.ID }, null)</li>
            }
            @if (Model.canDelete)
            {
                <li>@Html.ActionLink("Delete", "Delete", "Files", new { id = Model.File.ID }, null)</li>
            }
            @if (Model.canAddVersion)
            {
                <li>@Html.ActionLink("AddVersion", "AddVersion", "Files", new { id = Model.File.ID }, null)</li>
            }
   
            </ul>
    }



</div>

<div class="col-lg-9">
    @if (Model.CurrentVersion != null)
    {

        <h3>
            Current Version
        </h3>
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.CurrentVersion.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CurrentVersion.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentVersion.FileType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentVersion.FileContent.FileSize)
                </th>
                <th>
                    @Html.DisplayName("Author")
                </th>


            </tr>


            <tr>

                <td>
                    @Html.DisplayFor(model => model.CurrentVersion.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CurrentVersion.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CurrentVersion.FileType.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CurrentVersion.FileContent.FileSize)
                </td>
                <td>
                    @Html.ActionLink(Model.CurrentVersion.EmployeeRole.Employee.Name,"PersonProfile","Employees",new { id=Model.CurrentVersion.EmployeeRole.Employee.ID}, null)
                </td>
                <td>
                    @Html.ActionLink("Download", "Download", new { id = @Model.CurrentVersion.ID })
                </td>


            </tr>
            

        </table>
    }
    else
    { <h5>This File Has No Current Version</h5>}

    <hr />


    @if (!(Model.Versions == null || Model.Versions.Count == 0))
    {
        <h3>
            Other Versions
        </h3>
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Versions[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Versions[0].DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Versions[0].FileType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Versions[0].FileContent.FileSize)
                </th>
                <th>
                    @Html.DisplayName("Author")
                </th>


            </tr>
            @foreach (var item in Model.Versions)
            {

        <tr>

            <td>
                @item.Name
            </td>
            <td>
                @item.DateCreated

            </td>
            <td>
                @item.FileType.Name

            </td>
            <td>
                @item.FileContent.FileSize
            </td>
            <td>
                @Html.ActionLink(item.EmployeeRole.Employee.Name, "PersonProfile", "Employees", new { id = item.EmployeeRole.Employee.ID },null)
            </td>

            <td>
                @Html.ActionLink("Download", "Download", new { id = item.ID }) 
                @if (Model.canSetCurrentVersion)
                { <p>|</p>@Html.ActionLink("SetCurrent", "SetCurrentVersion", new { id = item.ID })}
            </td>

        </tr>
            
            }

        </table>

    }
    else
    { <h5>This File Has No Other Versions</h5>}

</div>



